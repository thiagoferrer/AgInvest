<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER" spacing="10" prefWidth="360" prefHeight="640" style="-fx-background-color: #ffffff;">

    <!-- Título -->
    <Label text="Bem-vindo"
           style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0267ff;"
           VBox.vgrow="NEVER" alignment="CENTER" padding="10 0 0 0"/>

    <!-- Subtítulo -->
    <Label text="Entre com sua conta ou crie uma nova para continuar"
           style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-text-fill: #000000;"
           wrapText="true" alignment="CENTER" padding="0 20 0 20"/>

    <!-- Abas Entrar/Cadastrar -->
    <HBox alignment="CENTER" spacing="10" padding="10 0 0 0">
        <Button text="Entrar"
                style="-fx-background-color: #f0f0f0; -fx-text-fill: #000000; -fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px;"
                prefWidth="150" prefHeight="40"/>
        <Button text="Cadastrar"
                style="-fx-background-color: #ffffff; -fx-text-fill: #0267ff; -fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-border-color: #0267ff; -fx-border-width: 1;"
                prefWidth="150" prefHeight="40"/>
    </HBox>

    <!-- Campo Nome -->
    <Label text="Nome completo"
           style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-text-fill: #000000;"
           padding="20 0 5 0"/>
    <TextField promptText="Seu nome"
               style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-background-color: #f0f0f0; -fx-border-color: #d3d3d3; -fx-border-radius: 5;"
               prefWidth="300" prefHeight="40"/>

    <!-- Campo Email -->
    <Label text="Email" style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-text-fill: #000000;"
           padding="10 0 5 0"/>
    <TextField promptText="seu@email.com"
               style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-background-color: #f0f0f0; -fx-border-color: #d3d3d3; -fx-border-radius: 5;"
               prefWidth="300" prefHeight="40"/>

    <!-- Campo Senha -->
    <Label text="Senha" style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-text-fill: #000000;"
           padding="10 0 5 0"/>
    <PasswordField promptText=""
                   style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-background-color: #f0f0f0; -fx-border-color: #d3d3d3; -fx-border-radius: 5;"
                   prefWidth="300" prefHeight="40"/>

    <!-- Campo Confirmar Senha -->
    <Label text="Confirmar senha"
           style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-text-fill: #000000;"
           padding="10 0 5 0"/>
    <PasswordField promptText=""
                   style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-background-color: #f0f0f0; -fx-border-color: #d3d3d3; -fx-border-radius: 5;"
                   prefWidth="300" prefHeight="40"/>

    <!-- Botão Cadastrar -->
    <Button text="Cadastrar"
            style="-fx-background-color: #000000; -fx-text-fill: #ffffff; -fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-background-radius: 5;"
            prefWidth="300" prefHeight="50" VBox.vgrow="NEVER" alignment="CENTER" padding="20 0 0 0"/>

</VBox>