<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aginvest.controller.viewcontroller.LogoController"
      alignment="CENTER" spacing="24" prefWidth="360" prefHeight="640"
      style="-fx-background-color: #FFFFFF; -fx-padding: 16;">

    <!-- Logotipo -->
    <Label text="Invest7" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #1E90FF;" />

    <!-- Texto de boas-vindas -->
    <Label text="Bem vindo ao Invest7!" style="-fx-font-size: 16; -fx-text-fill: #666;" />

    <!-- Botões Cadastro e Login (lado a lado) -->
    <HBox alignment="CENTER" spacing="16">
        <Button fx:id="cadastroButton" text="Cadastro" onAction="#handleCadastro"
                style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 16;
                       -fx-pref-height: 48; -fx-padding: 0 24 0 24; -fx-background-radius: 8; -fx-cursor: hand;" />
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                style="-fx-background-color: #32CD32; -fx-text-fill: white; -fx-font-size: 16;
                       -fx-pref-height: 48; -fx-padding: 0 24 0 24; -fx-background-radius: 8; -fx-cursor: hand;" />
    </HBox>

    <!-- Botão Simulação Prévia -->
    <Button fx:id="simulacaoButton" text="Simulação Prévia" onAction="#handleSimulacao"
            style="-fx-background-color: #87CEFA; -fx-text-fill: white; -fx-font-size: 16;
                   -fx-pref-width: 200; -fx-pref-height: 48; -fx-background-radius: 8; -fx-cursor: hand;" />

</VBox>