<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aginvest.controller.viewcontroller.LogoController"
      alignment="CENTER" spacing="24" prefWidth="360" prefHeight="640"
      style="-fx-background-color: #FFFFFF; -fx-padding: 16;">

    <!-- Logotipo -->
    <ImageView fx:id="logoImage" fitHeight="500" fitWidth="250" preserveRatio="true"/>

    <!-- Texto de boas-vindas -->
    <Label text="Bem vindo ao Invest7!"
           style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #666666;
           -fx-padding: 16 0 16 0"/>

    <!-- Botões Cadastro e Login (lado a lado) -->
    <HBox alignment="CENTER" spacing="16">
        <Button fx:id="cadastroButton" text="Cadastro" onAction="#handleCadastro"

                style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 16;-fx-font-weight: bold;
                       -fx-pref-height: 48; -fx-pref-width: 100; -fx-padding: 12; -fx-background-radius: 8;  -fx-cursor: hand;" />
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                style="-fx-background-color: #41C769; -fx-text-fill: white; -fx-font-size: 16;-fx-font-weight: bold;
                       -fx-pref-height: 48; -fx-pref-width: 100; -fx-padding: 12; -fx-background-radius: 8;-fx-cursor: hand;" />

    </HBox>

    <!-- Botão Simulação Prévia -->
    <Button fx:id="simulacaoButton" text="Simulação Prévia" onAction="#handleSimulacao"

            style="-fx-background-color: #67A4FF; -fx-text-fill: white; -fx-font-size: 16;-fx-font-weight: bold;  -fx-padding: 12;
                   -fx-pref-width: 210; -fx-pref-height: 48; -fx-background-radius: 8;-fx-cursor: hand;" />


</VBox>