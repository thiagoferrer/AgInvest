<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxWidth="360" spacing="16" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aginvest.LogoController">

    <padding>
        <Insets bottom="16" left="16" right="16" top="16" />
    </padding>

    <!-- Título -->
    <Label alignment="CENTER" maxWidth="328"
           style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 20px;
                  -fx-font-weight: bold; -fx-text-fill: #0267ff; -fx-wrap-text: true;"
           text="Descubra o melhor caminho para seus investimentos" />

    <!-- Subtítulo -->
    <Label alignment="CENTER" maxWidth="328"
           style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px;
                  -fx-text-fill: #0267ff; -fx-wrap-text: true;"
           text="Conheça seu perfil de investidor e simule diferentes opções para fazer seu dinheiro render mais." />

    <!-- Botão com melhor área de toque -->
    <Button fx:id="comecarButton" minHeight="48" minWidth="120"
            onAction="#onclickcomecar"
            style="-fx-font-family: 'Lemon Milk Pro Variable';
                   -fx-background-color: #0267ff; -fx-text-fill: white;
                   -fx-font-size: 14px; -fx-padding: 12 24;"
            text="Começar agora">
    </Button>
</VBox>
